<div class="container">
	<div style="margin-top: 50px">
	<a href="<%= new_itinerary_path %>" class="btn btn-primary pull-left">Add Itinerary</a>
	</div>
	<br>
	<hr>
	<% @itineraries.each do |i| %>
		<div style="margin-top: 10px">
			<h3><strong><%= i.name %></strong></h3>
			<h4>Destination: <%= i.destination %></h4>
			<h4>Trip date: <%= i.departure_date %> - <%= i.return_date %></h4>
			<h4>Waypoints:</h4>
			<% i.waypoints.each do |w| %>
				<div>
					<p><strong>Attraction:</strong> <%= w.name %></p>
					<p><strong>Location:</strong> <%= w.location %></p>
					<p><strong>Date of visit:</strong> <%= w.visit_date %></p>
					<p style="text-decoration: underline"><strong>Travelers:</strong></p>
					<% w.travelers.each do |t| %>
						<div>
							<p><strong>Name:</strong> <%= t.first_name %> <%= t.last_name %></p>
							<p><strong>Email:</strong> <%= t.email %></p>
						</div>
					<% end %>
				</div>
			<% end %>
			<!-- <h4>Travelers:</h4>
			<% i.travelers.each do |t| %>
				<div>
					<p>Name: <%= t.first_name %> <%= t.last_name %></p>
					<p>Email: <%= t.email %></p>
				</div>
			<% end %> -->
			<div>
				<a href="/itineraries/<%= i.id %>/waypoints" class="btn btn-primary pull-left" style="margin-right:20px">View Waypoints</a>
				<a href="/itineraries/<%= i.id %>/travelers" class="btn btn-primary pull-left">View Travelers</a>
				<a href="<%= edit_itinerary_path(i.id)%>" class="btn btn-primary pull-left" style="margin-left:20px">Edit Itinerary</a>
			</div>
		</div>
		<br>
		<hr>
	<%end %>
</div>
