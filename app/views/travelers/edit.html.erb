<div class="container">
	<%= simple_form_for([@itinerary, @traveler], method: "put", html: {class: 'form-inline' }) do |f| %>
		<ul>
			<li><%= f.input(:first_name, placeholder: "First Name") %></li>
			<li><%= f.input(:last_name, placeholder: "Last Name") %></li>
			<li><%= f.input(:email, placeholder: "Email") %></li>
			<li><%= submit_tag("Edit Traveler") %></li>
		</ul>
	<% end %>
	<%= form_for [@itinerary, @traveler], url: itinerary_traveler_path(@itinerary.id, @traveler.id), method: "delete" do |f| %>
		<ul>
			<li><%= submit_tag("Delete Traveler") %></li>
		</ul>
	<% end %>
</div>