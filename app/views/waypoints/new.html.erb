<div class="container">
	<%= simple_form_for([@itinerary, @waypoint], html: {class: 'form-horizontal' }) do |f| %>
		<ul>
			<li><%= f.input(:name, placeholder: "Attraction") %></li>
			<li><%= f.input(:location, placeholder: "Address") %></li>
			<li><%= f.date_field(:visit_date, placeholder: "Date of Visit") %></li>
			<li><%= submit_tag("Create Waypoint") %></li>
		</ul>
	<% end %>
</div>